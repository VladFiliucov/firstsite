<!DOCTYPE html>
<html>
<head>
  <title>Firstsite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a href="#" class="brand">Homepage</a>
				<ul class="nav">
					<li><%= link_to "All Statuses", feed_path %></li>
				</ul>
				<ul class="nav pull-right">
					<% if user_signed_in? %>
						
						<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
						<li><%= link_to "Выход", logout_path %></li>
					<% else %>
						<li><%= link_to " Зарегестрироватся ", register_path %></li>
						<li><%= link_to " Войти ", login_path %></li>	
					<% end %>
				</ul>	
			</div>
		</div>
	</div>

	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>">
				<button class="close" data-dismiss="alert">×</button>
				<%= message %>
			</div>
		<% end %>

	

<%= yield %>
	</div>
	
</body>
</html>
